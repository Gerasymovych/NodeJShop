<h1>Cart</h1>
<div id="card">
    {{#if courses.length}}
        <table>
            <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {{#each courses}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{count}}</td>
                    <td>
                        <button class="btn btn-small js-remove" data-id="{{id}}">Delete</button>
                    </td>
                </tr>
            {{/each}}
            </tbody>
        </table>

        <p><strong> Price: <span class="price">{{price}}</span> </strong></p>

        <form action="/orders" method="post">
            <button type="submit" class="btn">Make order</button>
            <input type="hidden" name="_scrf" value="{{csrf}}">
        </form>

    {{else}}
        <p>Cart is empty</p>
    {{/if}}
</div>

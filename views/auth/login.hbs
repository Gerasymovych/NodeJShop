<div class="row">
    <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login">Log in</a></li>
            <li class="tab col s6"><a class="active" href="#register">Sign up</a></li>
        </ul>
    </div>
    <div id="login" class="col s6 offset-s3">
        <h1>Authorize</h1>
        <form action="/add" method="POST">
            <div class="input-field">
                <input id="email" name="email" type="email" class="validate" required>
                <label for="email">Your email</label>
                <span class="helper-text" data-error="Enter correct email" data-success="right"></span>
            </div>
            <div class="input-field">
                <input id=rpassword" name="password" type="password" class="validate" required>
                <label for="password">Your password</label>
                <span class="helper-text" data-error="Enter correct password" data-success="right"></span>
            </div>

            <button class="btn btn-primary">Sign In</button>
        </form>
    </div>

    <div id="register" class="col s6 offset-s3">
        <h1>Create user</h1>
        <form action="/add" method="POST">
            <div class="input-field">
                <input id="remail" name="email" type="email" class="validate" required>
                <label for="remail">Your email</label>
                <span class="helper-text" data-error="Enter your email" data-success="right"></span>
            </div>
            <div class="input-field">
                <input id="rpassword" name="password" type="password" class="validate" required >
                <label for="price">Your password</label>
                <span class="helper-text" data-error="Enter password" data-success="right"></span>
            </div>
            <div class="input-field">
                <input id="confirm" name="confirm" type="password" class="validate" required >
                <label for="confirm">Confirm your password</label>
                <span class="helper-text" data-error="Enter your password ones again" data-success="right"></span>
            </div>

            <button class="btn btn-primary" type="submit">Register</button>
        </form>
    </div>
</div>
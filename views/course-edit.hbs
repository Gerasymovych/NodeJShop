<h1>Edit {{course.title}}</h1>

<form action="/courses/edit" method="POST">
    <div class="input-field">
        <input id="title" name="title" type="text" class="validate" required value="{{course.title}}">
        <label for="title">Course Name</label>
        <span class="helper-text" data-error="Enter course name" data-success="right"></span>
    </div>
    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" value="{{course.price}}">
        <label for="price">Price</label>
        <span class="helper-text" data-error="Enter course price" data-success="right"></span>
    </div>
    <div class="input-field">
        <input id="url" name="url" type="text" class="validate" required value="{{course.image}}">
        <label for="url">Image URL</label>
        <span class="helper-text" data-error="Enter valid URL of image" data-success="right"></span>
    </div>

    <button class="btn btn-primary" type="submit">Save</button>

    <input type="hidden" name="id" value="{{course._id}}">
</form>

<form action="/courses/remove" method="POST">
    <input type="hidden" name="id" value="{{course._id}}">
    <button class="btn red" type="submit">Delete</button>
</form>

